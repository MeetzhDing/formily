{
  "extends": "./config/tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "skipLibCheck": true,
    "paths": {
//      "@formily/*": ["packages/*/src", "devtools/*/src"]
    },
    "plugins": [
      {
        "transform": "./config/transformer.ts",
        "after": true
      }
    ],
    "strictNullChecks": true,
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "composite": true,
    "rootDir": "src"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./.*.js", "./*.js"],
  "exclude": ["./esm/*", "./lib/*"],
}
